{
  "manifest_version": 2,

  "name": "VoiceExt",
  "description": "Automatical speech",
  "version": "1.8.1",
  "permissions": [
    "tabs",
    "http://www.bilibili.com/*", 
    "https://www.bilibili.com/*",
    "https://static-s.bilibili.com/play.swf?cid=*",
    "http://m.acg.tv/",
    "*://interface.bilibili.com/*"
  ],
  "background": {
    "scripts": ["post_comment.js", "bg.js"]
  },
  "content_scripts": [
    {
      "matches": ["http://www.bilibili.com/video/*"],
      "js": ["get_aid_cid.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://static-s.bilibili.com/play.swf?cid=*"],
      "css": ["add.css", "bootstrap.min.css", "bootstrap-table.css"],
      "js": ["jquery-2.1.4.min.js","bootstrap.min.js","bootstrap-table.js", "addon.js", "post_comment.js","func_recall.js",  "myscript.js"]
    }
  ],


  "browser_action": {
    "default_icon": "icon.png"
    //"default_popup": "popup.html"
  }
}